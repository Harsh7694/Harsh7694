    }

    h1 {
      text-align: center;
    }

    label {
      display: block;
      margin-bottom: 10px;
    }

    input[type="number"] {
      width: 100%;
      padding: 5px;
      border: 2px solid #369351;
      border-radius: 3px;
    }

    button {
      width: 100%;
      padding: 10px;
      background-color: #1f8e27;
      color: #ffff;
      border: none;
      border-radius: 15px;
      cursor: pointer;
    }

    #result {
      margin-top: 10px;
      font-weight: bold;
    }
